<input type="text" id="showText"/>
<script type="text/javascript">
    function OnSend() {
        var dataContent = { parameterName: "test" };
        $.ajax({
            url: '@Url.Action("HelloWorld")',
            type: 'Post',
            data: dataContent,
            complete: function () { },
            success: function (result) {
                if (result.success == true) {
                    $('#showText').val(result.show);
                }
            }

        })
    }
</script>
